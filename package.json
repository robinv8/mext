{
  "name": "@mext/cli",
  "version": "0.0.3",
  "main": "index.js",
  "private": true,
  "bin": {
    "mext": "bin/mext"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.tpl dist/",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "create": "npm run build && npm run test",
    "build": "npm run clean && npm run copy-files && tsc && tsc-alias",
    "build:watch": "npm run clean && npm run copy-files && tsc -w & tsc-alias -w ",
    "local": "sudo npm i -g && pizza",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "release": "release-it"
  },
  "repository": "https://github.com/robinv8/mext",
  "author": "robin <robin@rnode.me> (https://github.com/robinv8)",
  "bugs": {
    "url": "https://github.com/robinv8/mext/issues"
  },
  "homepage": "https://github.com/robinv8/mext#readme",
  "dependencies": {
    "@babel/core": "^7.17.12",
    "@babel/generator": "^7.17.12",
    "@babel/parser": "^7.17.12",
    "@babel/traverse": "^7.17.12",
    "@babel/types": "^7.17.12",
    "@types/babel-traverse": "^6.25.7",
    "@types/figlet": "^1.5.4",
    "chalk": "4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.2.0",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "lodash": "^4.17.21",
    "minimist": "^1.2.6",
    "mustache": "^4.2.0",
    "node-sass": "^7.0.1",
    "node-sass-alias-importer": "^1.2.0",
    "node-sass-package-importer": "^5.3.2",
    "postcss": "^8.4.14",
    "tsc-alias": "^1.6.7"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.33",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.16",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
